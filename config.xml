<?xml version='1.0' encoding='utf-8'?>
<widget xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps" 
  id="theFinder" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" defaultlocale="en-US" android-versionCode="1">
  <name>The Finder</name>
  <description>An application that helps users find locations of various places on a map</description>
  <author href="http://cordova.io" email="sylvia.engmann8@gmail.com">Sylvia Engmann</author>
  <content src="index.html" />
  <access origin="*" />
  <vs:features />
  <preference name="SplashScreen" value="screen" />
  <preference name="windows-target-version" value="8.1" />

  <!-- Support for Cordova 5.0.0 plugin system -->
  <plugin name="cordova-plugin-whitelist" version="1" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />

  <platform name="android">
    <allow-intent href="market:*" />
  </platform>

  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
 
  <platform name="android">
    <icon src ="png/app/platform/android/res/drawable-hdpi/appicon.png" density="hdpi"/>
    <icon src ="png/app/platform/android/res/drawable-mdpi/appicon.png" density="mdpi"/>
    <icon src ="png/app/platform/android/res/drawable-xhdpi/appicon.png" density="xhdpi"/>
    <icon src ="png/app/platform/android/res/drawable-xxhdpi/appicon.png" density="xxhdpi"/>
    </platform>

   <platform name="ios">
    <icon src="png/app/assets/iphone/Default-Landscape.png" width="1024" height="768"/>
    </platform>

  <platform name="windows">
    <icon src="png/app/assets/mobileweb/appicon.png" width="128" height="128" />
    </platform>

  <platform name="wp8">
    <icon src="png/app/assets/mobileweb/appicon.png" width="128" height="128" />
    </platform>

  <platform name="android">
    <splash src ="png/app/platform/android/res/drawable-hdpi/background.9.png" density="hdpi"/>
    <splash src ="png/app/platform/android/res/drawable-mdpi/background.9.png" density="mdpi"/>
    <splash src ="png/app/platform/android/res/drawable-xhdpi/background.9.png" density="xhdpi"/>
    <splash src ="png/app/platform/android/res/drawable-xxhdpi/background.9.png" density="xxhdpi"/> 
  </platform>

  <platform name="ios">
    <splash src="png/app/assets/iphone/Default-Portrait.png" width="768" height="1024"/>
    </platform>

  <platform name="windows">
    <splash src="png/app/assets/mobileweb/apple_startup_images/Default-Portrait.png" width="768" height="1024"/>
    </platform>

  <platform name="wp8">
    <splash src="png/app/assets/mobileweb/apple_startup_images/Default-Portrait.png" width="768" height="1024"/>
    </platform>
  
  <plugin name="cordova-plugin-geolocation" />
  <plugin name="phonegap-plugin-barcodescanner"/>
  <plugin name="cordova-plugin-splashscreen"/>
  <plugin name="cordova-plugin-contacts"  />
  <plugin name="cordova-plugin-media-capture" />
  <plugin name="cordova-plugin-compat" />
  <plugin name="cordova-plugin-file"  />

  <preference name="android-minSdkVersion" value="1" />
  <preference name="android-maxSdkVersion" value="23" />
  <preference name="android-targetSdkVersion" value="21" />
</widget>
